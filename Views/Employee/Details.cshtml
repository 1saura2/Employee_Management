@model EmployeeManagement.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">Employee Data</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Employee Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.EmployeeName)</dd>

                <dt class="col-sm-2">Salary:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Salary, "{0:C}")</dd> 

                <dt class="col-sm-2">Date of Joining:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.DateOfJoining, "{0:yyyy-MM-dd}")</dd> 

                <dt class="col-sm-2">Department:</dt>
                <dd class="col-sm-10">@Model.Department.DepartmentName</dd>
            </dl>
        </div>
    </div>


    <div class="row mt-4">
        <div class="col-md-6">
            <p>
                <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">Edit</a> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </p>
        </div>
    </div>
</div>
